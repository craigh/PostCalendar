<div class="z-formrow">
    {formlabel for='eid' __text='PostCalendar Event ID'}
    {formtextinput id='eid' group='data' maxLength=10 mandatory=true}
</div>
<div class="z-formrow">
    {formlabel for='showcountdown' __text='Display daily countdown to event'}
    {formcheckbox id='showcountdown' group='data'}
</div>
<div class="z-formrow">
    {formlabel for='hideonexpire' __text='Hide event on expiration'}
    {formcheckbox id='hideonexpire' group='data'}
</div>
